<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.init.splash.SplashFragment">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/view_splash"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:backgroundTint="@color/theme"
        android:background="@drawable/background_intro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/poppins_light"
        android:text="@string/description_lorem"
        android:textColor="@color/light_gray"
        android:textStyle="bold"
        android:textSize="38sp"
        app:layout_constraintTop_toTopOf="@+id/view_splash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_book"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/happy_kid_walking_go_to_school"
        app:layout_constraintBottom_toBottomOf="@+id/view_splash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>